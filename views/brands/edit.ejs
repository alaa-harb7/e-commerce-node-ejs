<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Brand - TOPICO</title>
    <link rel="stylesheet" href="/css/topico-style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .form-container {
            max-width: 600px;
            margin: 40px auto;
        }
        .form-card {
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.05);
            border: 1px solid #eaeaea;
            overflow: hidden;
        }
        .form-header {
            background: #ffffff;
            padding: 25px;
            text-align: center;
            border-bottom: 1px solid #f0f0f0;
        }
        .form-title {
            font-size: 24px;
            font-weight: 700;
            color: #1a1a1a;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        .form-body {
            padding: 40px;
        }
        .form-label {
            font-weight: 600;
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #555;
            margin-bottom: 8px;
        }
        .form-control {
            border: 1px solid #e0e0e0;
            border-radius: 6px;
            padding: 12px;
            font-size: 14px;
            background-color: #f9f9f9;
            transition: all 0.3s;
        }
        .form-control:focus {
            background-color: #fff;
            border-color: #FFD700;
            box-shadow: 0 0 0 3px rgba(255, 215, 0, 0.1);
        }
        .btn-action {
            width: 100%;
            padding: 12px;
            font-weight: 600;
            border-radius: 6px;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 10px;
            border: none;
        }
        .btn-submit {
            background: #000;
            color: #FFD700;
        }
        .btn-submit:hover {
            background: #333;
            color: #fff;
        }
        .btn-delete {
            background-color: #dc3545;
            color: white;
            margin-top: 10px;
        }
        .btn-delete:hover {
            background-color: #c82333;
            color: white;
        }
        .btn-cancel {
            background: #fff;
            color: #666;
            border: 1px solid #ddd;
            margin-top: 10px;
            text-align: center;
            display: block;
            text-decoration: none;
        }
        .btn-cancel:hover {
            background: #f5f5f5;
            color: #333;
        }
        .img-preview-container {
            width: 100%;
            height: 200px;
            background: #f9f9f9;
            border: 2px dashed #ddd;
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            margin-top: 10px;
        }
        .img-preview-container img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }
        .current-img-container {
             width: 100px;
             height: 100px;
             border: 1px solid #eee;
             border-radius: 4px;
             overflow: hidden;
             display: inline-block;
             margin-right: 10px;
        }
        .current-img-container img {
             width: 100%; height: 100%; object-fit: cover;
        }
    </style>

    <main class="form-container">
        <div class="form-card">
            <div class="form-header">
                <h3 class="form-title">Edit Brand</h3>
            </div>
            <div class="form-body">
                <form id="editBrandForm" enctype="multipart/form-data">
                    <input type="hidden" id="brandId" value="<%= data._id %>">
                    <div class="mb-3">
                        <label for="name" class="form-label">Brand Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= data.name %>" required>
                    </div>
                    <div class="mb-4">
                        <label for="image" class="form-label">Brand Image</label>
                        <% if (data.image) { %>
                            <div class="mb-2">
                                <span class="form-label" style="font-size:11px;">Current:</span><br>
                                <div class="current-img-container">
                                    <img src="<%= data.image %>" alt="Current">
                                </div>
                            </div>
                        <% } %>
                        <input type="file" class="form-control" id="image" name="image" accept="image/*" onchange="previewImage(this, 'imagePreview')">
                        <div class="img-preview-container" id="imagePreviewContainer" style="display:none;">
                            <img id="imagePreview" src="#" alt="Preview">
                        </div>
                    </div>
                    
                    <button type="submit" class="btn-action btn-submit">Update Brand</button>
                    <button type="button" class="btn-action btn-delete" onclick="deleteBrand()">Delete Brand</button>
                    <a href="/brands" class="btn-action btn-cancel">Cancel</a>
                </form>
            </div>
        </div>
    </main>
    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    function previewImage(input, previewId) {
        const preview = document.getElementById(previewId);
        const container = document.getElementById(previewId + 'Container');
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                preview.src = e.target.result;
                if(container) container.style.display = 'flex';
                else preview.style.display = 'block';
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    document.getElementById('editBrandForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        const brandId = document.getElementById('brandId').value;
        const formData = new FormData(this);
        
        try {
            const response = await fetch(`/api/v1/brands/${brandId}`, {
                method: 'PUT',
                body: formData
            });
            
            if (response.ok) {
                await Swal.fire(
                    'Success!',
                    'Brand updated successfully',
                    'success'
                );
                window.location.href = '/brands';
            } else {
                const data = await response.json();
                Swal.fire(
                    'Error!',
                    data.message || 'Failed to update brand',
                    'error'
                );
            }
        } catch (err) {
            console.error(err);
            Swal.fire(
                'Error!',
                'An error occurred',
                'error'
            );
        }
    });

    async function deleteBrand() {
        const result = await Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        });

        if (result.isConfirmed) {
            const brandId = document.getElementById('brandId').value;
            
            try {
                const response = await fetch(`/api/v1/brands/${brandId}`, {
                    method: 'DELETE',
                });
                
                if (response.ok) {
                    await Swal.fire(
                        'Deleted!',
                        'Brand has been deleted.',
                        'success'
                    );
                    window.location.href = '/brands';
                } else {
                    const data = await response.json();
                    Swal.fire(
                        'Error!',
                        data.message || 'Failed to delete brand',
                        'error'
                    );
                }
            } catch (err) {
                console.error(err);
                Swal.fire(
                    'Error!',
                    'An error occurred',
                    'error'
                );
            }
        }
    }
    </script>
</body>
</html>




