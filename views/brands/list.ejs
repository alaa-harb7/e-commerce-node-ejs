<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Brands Management - TOPICO</title>
    <link rel="stylesheet" href="/css/topico-style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .main-nav {
            background-color: #ffffff;
            border-bottom: 1px solid #e5e5e5;
            margin-bottom: 20px;
        }
        .nav-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            align-items: center;
            gap: 30px;
            height: 50px;
        }
        .nav-link {
            text-decoration: none;
            padding: 15px 10px;
            letter-spacing: 0.5px;
            color: #333;
            font-weight: 500;
            font-size: 13px;
            text-transform: uppercase;
            height: 50px;
            display: flex;
            align-items: center;
            position: relative;
            transition: color 0.3s;
        }
        .nav-link:hover, .nav-link.active {
            color: #FFD700;
        }
        .nav-link.active::after {
            content: '';
            position: absolute;
            bottom: -1px;
            left: 0;
            width: 100%;
            height: 2px;
            background-color: #FFD700;
        }
        .brand-image {
            height: 200px;
            object-fit: contain;
            padding: 20px;
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <%- include('../partials/topico-header') %>
    
    <nav class="main-nav">
        <div class="nav-container">
            <a href="/" class="nav-link">HOME</a>
            <a href="/products?showAll=true" class="nav-link">ALL PRODUCTS</a>
            <a href="/about" class="nav-link">ABOUT US</a>
            <a href="/contact" class="nav-link">CONTACT</a>
            <a href="/categories" class="nav-link">CATEGORIES</a>
            <a href="/subcategories" class="nav-link">SUBCATEGORIES</a>
            <a href="/brands" class="nav-link active">BRANDS</a>
            <% if (typeof user !== 'undefined' && user && user.role === 'admin') { %>
                <a href="/users" class="nav-link">USERS</a>
                <a href="/admin/coupons" class="nav-link">COUPONS</a>
            <% } %>
        </div>
    </nav>

    <main class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-certificate"></i> Brands</h2>
            <% if (typeof user !== 'undefined' && user && user.role === 'admin') { %>
                <a href="/brands/create" class="btn btn-primary"><i class="fas fa-plus"></i> Add Brand</a>
            <% } %>
        </div>

        <div class="row">
            <% if (typeof data !== 'undefined' && data.length > 0) { %>
                <% data.forEach(brand => { %>
                    <div class="col-md-3 mb-4">
                        <div class="card h-100 shadow-sm">
                            <% if (brand.image) { %>
                                <img src="<%= brand.image %>" class="card-img-top brand-image" alt="<%= brand.name %>">
                            <% } else { %>
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="fas fa-certificate fa-3x text-secondary"></i>
                                </div>
                            <% } %>
                            <div class="card-body text-center">
                                <h5 class="card-title mb-0"><%= brand.name %></h5>
                            </div>
                            <% if (typeof user !== 'undefined' && user && user.role === 'admin') { %>
                                <div class="card-footer bg-white border-top-0 d-flex justify-content-between">
                                    <a href="/brands/<%= brand._id %>/edit" class="btn btn-warning btn-sm flex-fill me-2"><i class="fas fa-edit"></i> Edit</a>
                                    <button class="btn btn-danger btn-sm flex-fill" onclick="deleteBrand('<%= brand._id %>')"><i class="fas fa-trash"></i> Delete</button>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12">
                    <div class="alert alert-info text-center">No brands found. Click "Add Brand" to create one.</div>
                </div>
            <% } %>
        </div>
    </main>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    async function deleteBrand(id) {
        const result = await Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        });

        if (result.isConfirmed) {
            try {
                const response = await fetch(`/api/v1/brands/${id}`, {
                    method: 'DELETE',
                });
                
                if (response.ok) {
                    await Swal.fire(
                        'Deleted!',
                        'Brand has been deleted.',
                        'success'
                    );
                    window.location.reload();
                } else {
                    const data = await response.json();
                    Swal.fire(
                        'Error!',
                        data.message || 'Failed to delete brand',
                        'error'
                    );
                }
            } catch (err) {
                console.error(err);
                Swal.fire(
                    'Error!',
                    'An error occurred',
                    'error'
                );
            }
        }
    }
    </script>
</body>
</html>




