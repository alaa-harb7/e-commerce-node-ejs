<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Customer Support - TOPICO</title>
    <link rel="stylesheet" href="/css/topico-style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        .chat-container { max-width: 800px; margin: 20px auto; height: 70vh; display: flex; flex-direction: column; background: #fff; border-radius: 12px; box-shadow: 0 2px 20px rgba(0,0,0,0.1); }
        .chat-header { padding: 20px; border-bottom: 1px solid #eee; font-weight: 600; background: #f8f9fa; border-radius: 12px 12px 0 0; text-align: center;}
        .chat-messages { flex: 1; padding: 20px; overflow-y: auto; display: flex; flex-direction: column; gap: 15px; }
        .message { max-width: 70%; padding: 10px 15px; border-radius: 15px; font-size: 0.95em; line-height: 1.4; }
        .message.sent { align-self: flex-end; background: #000; color: #fff; border-bottom-right-radius: 2px; }
        .message.received { align-self: flex-start; background: #f1f0f0; border-bottom-left-radius: 2px; }
        .chat-input-area { padding: 20px; border-top: 1px solid #eee; display: flex; gap: 10px; }
        .chat-input { flex: 1; padding: 12px; border: 1px solid #ddd; border-radius: 25px; outline: none; }
        .send-btn { background: #000; color: #fff; border: none; padding: 0 25px; border-radius: 25px; cursor: pointer; font-weight: 600; }
        .message-time { font-size: 0.7em; opacity: 0.7; margin-top: 5px; display: block; text-align: right; }
        .chat-info { font-size: 0.9em; color: #666; text-align: center; margin-top: 5px; }
    </style>
</head>
<body>
    <%- include('../partials/topico-header') %>

    <div class="chat-container">
        <div class="chat-header">
            Customer Support
            <div class="chat-info">Chat with our support team in real-time</div>
        </div>
        <div class="chat-messages" id="messages">
            <% messages.forEach(msg => { %>
                <div class="message <%= msg.role === 'user' ? 'sent' : 'received' %>">
                    <div><%= msg.content %></div>
                    <span class="message-time"><%= new Date(msg.createdAt).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></span>
                </div>
            <% }); %>
        </div>
        <form class="chat-input-area" id="chatForm">
            <input type="text" class="chat-input" id="messageInput" placeholder="Type a message..." autocomplete="off">
            <button type="submit" class="send-btn">Send</button>
        </form>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        // Helper to get cookie
        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
        }
        
        const token = getCookie('token');
        console.log("Client Token found:", token ? "YES" : "NO");

        const socket = io({ 
            withCredentials: true,
            auth: {
                token: token
            },
            transports: ['websocket', 'polling'] 
        });
        const chatForm = document.getElementById('chatForm');
        const input = document.getElementById('messageInput');
        const messagesDiv = document.getElementById('messages');
        const userId = '<%= user._id %>';
        const chatHeader = document.querySelector('.chat-header');

        socket.on('connect', () => {
             console.log('Connected to socket server');
             // chatHeader.style.background = '#e6f9e6'; // Optional visual cue
        });

        socket.on('connect_error', (err) => {
             console.error('Socket connection error:', err);
             const errorDiv = document.createElement('div');
             errorDiv.style.color = 'red';
             errorDiv.style.textAlign = 'center';
             errorDiv.style.padding = '10px';
             errorDiv.innerText = `Connection Error: ${err.message || 'Please refresh'}`;
             // Check if already exists
             if(!document.querySelector('.socket-error')) {
                 errorDiv.className = 'socket-error';
                 chatHeader.appendChild(errorDiv);
             }
        });

        // Scroll to bottom
        messagesDiv.scrollTop = messagesDiv.scrollHeight;

        chatForm.addEventListener('submit', (e) => {
            e.preventDefault();
            if (input.value) {
                // For users, targetUserId is implied (it's themselves/admin listens to them)
                socket.emit('sendMessage', { content: input.value });
                input.value = '';
            }
        });

        socket.on('newMessage', (msg) => {
            const div = document.createElement('div');
            // Check if I sent it (role user)
            const type = msg.sender.role === 'user' ? 'sent' : 'received';
            div.className = `message ${type}`;
            div.innerHTML = `
                <div>${msg.content}</div>
                <span class="message-time">${new Date(msg.createdAt).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}</span>
            `;
            messagesDiv.appendChild(div);
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        });
    </script>
</body>
</html>
