<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product - TOPICO</title>
    <link rel="stylesheet" href="/css/topico-style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/topico-header') %>

    <style>
        .form-container {
            max-width: 900px;
            margin: 40px auto;
        }
        .form-card {
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.05);
            border: 1px solid #eaeaea;
            overflow: hidden;
        }
        .form-header {
            background: #ffffff;
            padding: 25px;
            text-align: center;
            border-bottom: 1px solid #f0f0f0;
        }
        .form-title {
            font-size: 24px;
            font-weight: 700;
            color: #1a1a1a;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        .form-body {
            padding: 40px;
        }
        .form-label {
            font-weight: 600;
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #555;
            margin-bottom: 8px;
        }
        .form-control {
            border: 1px solid #e0e0e0;
            border-radius: 6px;
            padding: 12px;
            font-size: 14px;
            background-color: #f9f9f9;
            transition: all 0.3s;
        }
        .form-control:focus {
            background-color: #fff;
            border-color: #FFD700;
            box-shadow: 0 0 0 3px rgba(255, 215, 0, 0.1);
        }
        .btn-action {
            width: 100%;
            padding: 12px;
            font-weight: 600;
            border-radius: 6px;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 10px;
            border: none;
        }
        .btn-submit {
            background: #000;
            color: #FFD700;
        }
        .btn-submit:hover {
            background: #333;
            color: #fff;
        }
        .btn-cancel {
            background: #fff;
            color: #666;
            border: 1px solid #ddd;
            margin-top: 10px;
            text-align: center;
            display: block;
            text-decoration: none;
        }
        .btn-cancel:hover {
            background: #f5f5f5;
            color: #333;
        }
        .img-preview-container {
            width: 100%;
            height: 200px;
            background: #f9f9f9;
            border: 2px dashed #ddd;
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            margin-top: 10px;
        }
        .img-preview-container img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }
        .row-gap {
            row-gap: 20px;
        }
        .current-img-container {
             width: 100px;
             height: 100px;
             border: 1px solid #eee;
             border-radius: 4px;
             overflow: hidden;
             display: inline-block;
             margin-right: 10px;
        }
        .current-img-container img {
             width: 100%; height: 100%; object-fit: cover;
        }
    </style>

    <main class="form-container">
        <div class="form-card">
            <div class="form-header">
                <h3 class="form-title"><i class="fas fa-edit"></i> Edit Product</h3>
            </div>
            <div class="form-body">
                <form action="/api/v1/products/<%= typeof data !== 'undefined' ? data._id : '' %>" method="PUT" enctype="multipart/form-data" id="editProductForm">
                    <div class="row row-gap">
                        <div class="col-md-6">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="title" name="title" value="<%= typeof data !== 'undefined' ? data.title : '' %>" required>
                        </div>
                        <div class="col-md-6">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" class="form-control" id="price" name="price" step="0.01" value="<%= typeof data !== 'undefined' ? data.price : '' %>" required>
                        </div>
                        <div class="col-md-6">
                            <label for="priceAfterDiscount" class="form-label">Price After Discount</label>
                            <input type="number" class="form-control" id="priceAfterDiscount" name="priceAfterDiscount" step="0.01" value="<%= typeof data !== 'undefined' && data.priceAfterDiscount ? data.priceAfterDiscount : '' %>">
                        </div>
                        <div class="col-md-6">
                            <label for="quantity" class="form-label">Quantity</label>
                            <input type="number" class="form-control" id="quantity" name="quantity" value="<%= typeof data !== 'undefined' ? data.quantity : '' %>" required>
                        </div>
                    </div>

                    <div class="mb-3 mt-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="5" required><%= typeof data !== 'undefined' ? data.description : '' %></textarea>
                    </div>

                    <div class="row row-gap mb-3">
                        <div class="col-md-6">
                            <label for="category" class="form-label">Category</label>
                            <select class="form-control" id="category" name="category" required>
                                <option value="">Select Category</option>
                                <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
                                    <% categories.forEach(cat => { %>
                                        <option value="<%= cat._id %>" <%= typeof data !== 'undefined' && data.category && data.category._id == cat._id ? 'selected' : '' %>><%= cat.name %></option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="brand" class="form-label">Brand</label>
                            <select class="form-control" id="brand" name="brand">
                                <option value="">Select Brand</option>
                                <% if (typeof brands !== 'undefined' && brands.length > 0) { %>
                                    <% brands.forEach(brand => { %>
                                        <option value="<%= brand._id %>" <%= typeof data !== 'undefined' && data.brand && data.brand._id == brand._id ? 'selected' : '' %>><%= brand.name %></option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                         <div class="col-md-12">
                            <label for="colors" class="form-label">Colors (comma separated)</label>
                            <input type="text" class="form-control" id="colors" name="colors" value="<%= typeof data !== 'undefined' && data.colors ? data.colors.join(', ') : '' %>">
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="imageCover" class="form-label">Cover Image</label>
                         <% if (typeof data !== 'undefined' && data.imageCover) { %>
                            <div class="mb-2">
                                <span class="form-label" style="font-size:11px;">Current:</span><br>
                                <div class="current-img-container">
                                    <img src="<%= data.imageCover %>" alt="Current">
                                </div>
                            </div>
                        <% } %>
                        <input type="file" class="form-control" id="imageCover" name="imageCover" accept="image/*" onchange="previewImage(this, 'coverPreview')">
                        <div class="img-preview-container" id="coverPreviewContainer" style="display:none; margin-top:10px;">
                            <img id="coverPreview" src="#" alt="Preview">
                        </div>
                    </div>

                    <div class="d-flex gap-3">
                        <button type="submit" class="btn-action btn-submit">Update Product</button>
                        <a href="/products" class="btn-action btn-cancel">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/admin.js"></script>
    <script>
        // Preview Image Logic (keep local)
        function previewImage(input, previewId) {
            const preview = document.getElementById(previewId);
            const container = document.getElementById(previewId + 'Container');
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    if(container) container.style.display = 'flex';
                    else preview.style.display = 'block';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    
        // Attach Admin Submission Logic
document.getElementById('editProductForm').addEventListener('submit', function(e) {
    const productId = "<%= typeof data !== 'undefined' ? data._id : '' %>"; 
    //                 ^            لاحظ استخدام العلامات المختلفة        ^

    submitAdminForm(e, 'editProductForm', '/api/v1/products/' + productId, '/products', 'PUT');
});
    </script>
</body>
</html>




