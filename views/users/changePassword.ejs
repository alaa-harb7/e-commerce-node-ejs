<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password - TOPICO</title>
    <link rel="stylesheet" href="/css/topico-style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/topico-header') %>

    <style>
        .form-container {
            max-width: 600px;
            margin: 40px auto;
        }
        .form-card {
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.05);
            border: 1px solid #eaeaea;
            overflow: hidden;
        }
        .form-header {
            background: #ffffff;
            padding: 25px;
            text-align: center;
            border-bottom: 1px solid #f0f0f0;
        }
        .form-title {
            font-size: 22px;
            font-weight: 700;
            color: #1a1a1a;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        .form-body {
            padding: 30px;
        }
        .form-label {
            font-weight: 600;
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #555;
            margin-bottom: 8px;
        }
        .form-control {
            border: 1px solid #e0e0e0;
            border-radius: 6px;
            padding: 12px;
            font-size: 14px;
            background-color: #f9f9f9;
            transition: all 0.3s;
        }
        .form-control:focus {
            background-color: #fff;
            border-color: #FFD700;
            box-shadow: 0 0 0 3px rgba(255, 215, 0, 0.1);
        }
        .btn-action {
            width: 100%;
            padding: 12px;
            font-weight: 600;
            border-radius: 6px;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 10px;
            border: none;
        }
        .btn-submit {
            background: #FFD700;
            color: #000;
        }
        .btn-submit:hover {
            background: #e6c200;
            color: #000;
        }
        .btn-cancel {
            background: #fff;
            color: #666;
            border: 1px solid #ddd;
            margin-top: 10px;
            text-align: center;
            display: block;
            text-decoration: none;
        }
        .btn-cancel:hover {
            background: #f5f5f5;
            color: #333;
        }
    </style>

    <main class="form-container">
        <div class="form-card">
            <div class="form-header">
                <h3 class="form-title"><i class="fas fa-key"></i> Change Password</h3>
            </div>
            <div class="form-body">
                <form id="changePasswordForm">
                    <div class="mb-3">
                        <label for="currentPassword" class="form-label">Current Password</label>
                        <input type="password" class="form-control" id="currentPassword" name="currentPassword" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">New Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="mb-3">
                        <label for="passwordConfirm" class="form-label">Confirm New Password</label>
                        <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" required>
                    </div>
                    <button type="submit" class="btn-action btn-submit">Change Password</button>
                    <a href="/users/me" class="btn-action btn-cancel">Cancel</a>
                </form>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/admin.js"></script>
    <script>
        document.getElementById('changePasswordForm').addEventListener('submit', function(e) {
            // Using admin.js logic but manually since this is a specific endpoint
            e.preventDefault();
            const currentPassword = document.getElementById('currentPassword').value;
            const password = document.getElementById('password').value;
            const passwordConfirm = document.getElementById('passwordConfirm').value;
            const token = localStorage.getItem('token');

            if (password !== passwordConfirm) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Passwords do not match!'
                });
                return;
            }

            fetch('/api/v1/users/changeMyPassword', {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': 'Bearer ' + token
                },
                body: JSON.stringify({
                    currentPassword,
                    password,
                    passwordConfirm
                })
            })
            .then(response => response.json().then(data => ({ status: response.status, body: data })))
            .then(({ status, body }) => {
                if (status >= 200 && status < 300) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: 'Password changed successfully! Please log in again.',
                        showConfirmButton: true
                    }).then(() => {
                        // Logout valid user
                        window.location.href = '/auth/login';
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: body.message || 'Something went wrong!'
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred. Please try again.'
                });
            });
        });
    </script>
</body>
</html>
